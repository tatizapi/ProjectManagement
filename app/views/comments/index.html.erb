<%= render 'projects/left_sidebar' %>
<%= render 'dashboard/tabs' %>


<div class="container-fluid">
  <div class="panel panel-primary">

    <div class="panel-heading">
      <span class="glyphicon glyphicon-comment"><b> Comments for <%= @ticket.title %> ticket</b></span>
    </div>

    <div class="panel-body scroll-down" id="all-comments-panel">
      <div id="messages"><%= render @all_ticket_comments %></div>
    </div>

    <div class="panel-footer">
      <div class="input-group" style="width:100%">
        <% if current_user.can_add_and_see_comments? %>
          <%= form_with model: @comment, url: ticket_comments_path, method: :post do |form| %>
            <%= form.text_field :body, class: "form-control", style: 'width: 95%;', autocomplete: 'off', placeholder: "Type your comment here..." %>
            <%= form.submit "Send", class: "btn btn-info" %>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
