
<% if message.user.id != current_user.id %>
   <div class="chat-body clearfix">
    <%= image_tag(message.user.file.url, size: "50", alt: 'User Avatar', class: 'chat-avatar-left') %>
    <small class="chat-time text-muted pull-left"><span class="glyphicon glyphicon-time"></span> <%= message.get_time %></small><br>
    <p class="left-message pull-left" id="message-body"><%= message.body %></p>
  </div><br>
<% else %>
   <div class="chat-body clearfix">
    <%= image_tag(current_user.file.url, size: "50", alt: 'User Avatar', class: 'chat-avatar-right') %>
    <small class="chat-time text-muted pull-right"><span class="glyphicon glyphicon-time"></span> <%= message.get_time %></small><br>
    <p class="right-message pull-right" id="message-body"><%= message.body %></p>
  </div><br>
<% end %>

