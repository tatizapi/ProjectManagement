<table class="dashboard-table table table-borderless">
  <thead>
    <tr>
      <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">TO DO</th>
      <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">In progress</th>
      <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Complete</th>
      <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Done</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <% @tickets.filter_by_status("To do").each do |ticket| %>
          <div class="row">
            <%= render partial: 'ticket', locals: {ticket: ticket} %>
          </div>
        <% end %>
      </td>
      <td>
        <% @tickets.filter_by_status("In progress").each do |ticket| %>
          <div class="row">
            <%= render partial: 'ticket', locals: {ticket: ticket} %>
          </div>
        <% end %>
      </td>
      <td>
        <% @tickets.filter_by_status("Complete").each do |ticket| %>
          <div class="row">
            <%= render partial: 'ticket', locals: {ticket: ticket} %>
          </div>
        <% end %>
      </td>
      <td>
        <% @tickets.filter_by_status("Done").each do |ticket| %>
          <div class="row">
            <%= render partial: 'ticket', locals: {ticket: ticket} %>
          </div>
        <% end %>
      </td>
    </tr>

  </tbody>
</table>
