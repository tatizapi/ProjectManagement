<%= form_with model: @client, local: true, class: 'form-horizontal' do |form| %>

  <% if @client.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:
    </h2>
    <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="container-fluid">
    <div class="form-group required">
      <%= form.label :first_name, class: 'control-label col-sm-1'%>
      <div class="col-sm-4">
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group required">
      <%= form.label :last_name, class: 'control-label col-sm-1' %>
      <div class="col-sm-4">
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group required">
      <%= form.label :username, class: 'control-label col-sm-1' %>
      <div class="col-sm-4">
        <%= form.text_field :username, class: 'form-control' %>
        <small class='form-text text-muted'>Must contain at least 3 letters</small>
      </div>
    </div>

    <div class="form-group required">
      <%= form.label :password, class: 'control-label col-sm-1' %>
      <div class="col-sm-4">
        <%= form.text_field :password, class: 'form-control' %>
        <small class='form-text text-muted'>Must contain at least 6 letters</small>
      </div>
    </div>

    <div class="form-group required">
      <%= form.label :email, class: 'control-label col-sm-1' %>
      <div class="col-sm-4">
        <%= form.text_field :email, class: 'form-control', placeholder: 'example@email.com' %>
        <small class='form-text text-muted'>Must have lowercase letters</small>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :country, class: 'control-label col-sm-1' %>
      <div class="col-sm-4">
        <%= form.text_field :country, class: 'form-control' %>
      </div>
    </div>


    <div class="form-group">
      <%= form.label :company, class: 'control-label col-sm-1' %>
      <div class="col-sm-4">
        <%= form.text_field :company, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :profile_picture, class: 'control-label col-sm-1' %>
      <div class="col-sm-4">
        <%= form.file_field :attachment, class: 'form-control-file' %>
      </div>
    </div>

    <br>
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-1">
        <%= form.submit "Save" %>
      </div>
    </div>

    <br>
    <p><span style="color:red">* </span>fields are mandatory</p>

  </div>
<% end %>
