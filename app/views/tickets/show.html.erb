<%= render 'projects/left_sidebar' %>

<div class="main">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-7 col-lg-7">

        <table class="table table-user-information">
          <tbody>
            <tr>
              <td><b>Title:<b></td>
              <td><%= @ticket.title.capitalize %></td>
            </tr>
            <tr>
              <td><b>Description:</b></td>
              <td><%= @ticket.description.capitalize %></td>
            </tr>
            <tr>
              <td><b>Assigned to:</b></td>
              <td><%= @ticket.get_employee.full_name %></td>
            </tr>
            <tr>
              <td><b>Created by:</b></td>
              <% if @ticket.owner %>
                <td><%= @ticket.get_owner.full_name %></td>
              <% else %>
                <td><%= @ticket.project.get_projectmanager.full_name %> (project manager) </td>
              <% end %>
            </tr>
            <tr>
              <td><b>Priority:</b></td>
              <td><%= @ticket.priority.capitalize %></td>
            </tr>
            <tr>
              <td><b>Status:</b></td>
              <td><%= @ticket.status.capitalize %></td>
            </tr>
            <tr>
              <td><b>Created at:</b></td>
              <td><%= @ticket.created_at.strftime("%d %^b, %H:%M") unless @ticket.created_at.nil? %></td>
            </tr>
            <tr>
              <td><b>Started at:</b></td>
              <td><%= @ticket.started_at.strftime("%d %^b, %H:%M") unless @ticket.started_at.nil? %></td>
            </tr>
            <tr>
              <td><b>Completed at:</b></td>
              <td><%= @ticket.completed_at.strftime("%d %^b, %H:%M") unless @ticket.completed_at.nil? %></td>
            </tr>
            <tr>
              <td><b>Ended at:</b></td>
              <td><%= @ticket.ended_at.strftime("%d %^b, %H:%M") unless @ticket.ended_at.nil? %></td>
            </tr>
            <tr>
              <% if (@ticket.parent_ticket) && (@ticket.type == 2) %>
                <td><b>From ticket:</b></td>
                <td><%= @ticket.get_parent.title %>
              <% elsif (@ticket.parent_ticket) && !(@ticket.type == 2) %>
                <td><b>Derived from:</b></td>
                <td><%= link_to @ticket.get_parent.title, project_ticket_path(@ticket.project, @ticket.get_parent) %>
              <% end %>
            </tr>
            <tr>
              <% if @ticket.has_children? %>
                <td><b>Children:</b></td>
                <td>
                  <% @ticket.get_children.each do |children| %>
                    <%= link_to children.title, project_ticket_path(@ticket.project, children) %><br>
                  <% end %>
                </td>
              <% end %>
            </tr>
            <tr>
              <td><b>Attachments:</b></td>
              <td>
                <% images, audios, videos, pdfs, others = [], [], [], [], [] %>
                <% @ticket.attachments.each do |attachment| %>
                  <% images.push(attachment.file) if attachment.file.is_image? %>
                  <% audios.push(attachment.file) if attachment.file.is_audio? %>
                  <% videos.push(attachment.file) if attachment.file.is_video? %>
                  <% pdfs.push(attachment.file) if attachment.file.is_pdf? %>
                  <% others.push(attachment.file) if attachment.file.is_other? %>
                <% end %>

                <% images.each do |image| %>
                  <%= image_tag(image.url, size: "25", alt: "broke", class: "comment-image") %>
                <% end %>
                <% unless images.empty? %> <br> <% end %>

                <% audios.each do |audio| %>
                  <%= audio_tag(audio.url, controls: true, class: "comment-audio") %>
                <% end %>
                <% unless audios.empty? %> <br> <% end %>

                <% videos.each do |video| %>
                  <%= video_tag(video.url, controls: true, size: "330x250", class: "comment-video") %>
                <% end %>
                <% unless videos.empty? %> <br> <% end %>

                <% pdfs.each do |pdf| %>
                  <%= link_to pdf.get_original_filename, pdf.url, target: :_blank %><br>
                <% end %>
                <% unless pdfs.empty? %> <br> <% end %>

                <% others.each do |other| %>
                  <%= link_to other.get_original_filename, download_file_path(comment.ticket.project, other), target: :_blank %><br>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>

      </div>
      <% if current_user.can_modify_ticket?(@project, @ticket) %>
        <%= link_to edit_project_ticket_path(@ticket.project, @ticket), class: 'btn btn-warning', title: 'Edit project' do %>
          <i class="glyphicon glyphicon-edit"></i>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
