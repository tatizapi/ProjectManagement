<%= render 'projects/left_sidebar' %>
<%= render 'dashboard/tabs' %>

<div class="container-fluid">
  <div class="panel panel-primary">

    <div class="panel-heading">
      <span class="glyphicon glyphicon-comment"><b> Chat</b></span>
    </div>

    <div class="panel-body">
      <div class="chat">
        <%= image_tag("home.png", size: "50", alt: 'User Avatar', class: 'left-chat-avatar') %>
        <small class="chat-time text-muted"><span class="glyphicon glyphicon-time"></span>12 mins ago</small>
        <p class="left-message" id="message-body">The first line of Lorem Ipsum comes from a line in section 1.10.32.</p>
      </div>

      <div class="chat">
        <span class="chat-img pull-right"><%= image_tag("bug.png", size: "50", alt: 'User Avatar', class: 'chat-avatar') %></span>
        <small class="chat-time text-muted pull-right"><span class="glyphicon glyphicon-time"></span>12 mins ago</small><br>
        <p class="right-message pull-right" id="message-body">The first line of Lorem Ipsum comes from a line in section 1.10.32.</p>
      </div>
    </div>

    <div class="panel-footer">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Type your message here..." />
        <span class="input-group-btn">
          <button class="btn btn-info"> Send</button>
        </span>
      </div>
    </div>
  </div>
</div>
