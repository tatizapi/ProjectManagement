<%= render 'projects/left_sidebar' %>
<%= render 'dashboard/tabs' %>

<div class="container-fluid">
  <div class="panel panel-primary">

    <div class="panel-heading">
      <span class="glyphicon glyphicon-comment"><b> Chat</b></span>
    </div>

    <div class="panel-body">
      <div id="messages"><%= render @messages %></div>
    </div>

    <div class="panel-footer">
      <div class="input-group" style="width:100%">
        <%= form_with model: @message, url: project_chat_index_path, method: :post do |form| %>
          <%= form.text_field :body, class: "form-control", id: "chat-text-input", style: 'width: 95%', placeholder: "Type your message here..." %>
          <%= form.submit "Send", class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
$('.panel-body').scrollTop($('.panel-body')[0].scrollHeight);
</script>
